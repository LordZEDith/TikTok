# JWT secret key for token signing and verification
# Generate a secure key using: https://generate-random.org/encryption-key-generator?count=1&bytes=32&cipher=aes-256-cbc
# Recommended: 32 bytes (256 bits) for AES-256-CBC encryption
JWT_SECRET= 
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database host address (e.g., localhost or your remote server address)
DB_HOST=
# Database username for authentication
DB_USER=
# Database password for authentication
DB_PASSWORD=
# Name of the database to connect to
DB_NAME=
# Port number for database connection (default is usually 3306 for MySQL)
DB_PORT=


# SMTP server host for sending emails (e.g., smtp.gmail.com)
SMTP_HOST=
# SMTP server port (common ports: 465 for SSL, 587 for TLS, 25 for non-secure)
SMTP_PORT=
# Email address used for SMTP authentication
SMTP_USER=
# Password or app-specific password for SMTP authentication
SMTP_PASS=

# API key for Google's Gemini AI service
GEMINI_API_KEY=